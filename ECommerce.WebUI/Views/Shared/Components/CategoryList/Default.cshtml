@model CategoryListViewModel
<section class="list-group">
    @foreach (var item in Model.Categories)
    {
        var css = "list-group-item";
        @if (item.CategoryId == Model.CurrentCategory)
        {
            css += " active";
        }

        <a href="/admin/index?category=@item.CategoryId" style="cursor:pointer;margin-top:10px;"
           class="@css">
            @item.CategoryName
            <a asp-controller="Admin" asp-action="RemoveCategory" asp-route-id="@item.CategoryId" class="btn btn-xs btn btn-warning" style="cursor:pointer;text-align:center;list-style:none;">REMOVE</a>
        </a>

    }
    <a asp-controller="Admin" asp-action="AddCategory" style="margin-top:20px;" class="btn btn-xs btn-success">Add Category</a>
</section>